<header class="sticky-header">
    <div class="header-container">
        <div class="header-left">
            <a href="/" class="logo">
                <img src="/images/GIGO logo.png" alt="GiGo Logo" class="logo-image">
            </a>
        </div>
        <div class="header-right">
            <!-- Global Network Icon -->
            <div class="icon-container global-container">
                <a href="/provider/global" class="global" aria-label="Global Network">
                    <img src="/images/GIGO global.png" alt="Global Network" class="global-icon">
                </a>
                <span class="tooltip-text">Global Network</span>
            </div>

            <!-- Notification Bell Icon -->
            <div class="icon-container notification-container">
                <a href="/notifications" class="notification" aria-label="Notifications">
                    <img src="/images/GIGO bell.png" alt="Notification" class="notification-icon">
                    <div class="badge badge-success badge--xs" id="notification-badge"></div>
                </a>
                <span class="tooltip-text">Notifications</span>
            </div>

            <!-- Settings Icon -->
            <div class="icon-container settings-container">
                <a href="/settings" class="settings" aria-label="Settings">
                    <img src="/images/GIGO settings.png" alt="Settings" class="settings-icon">
                </a>
                <span class="tooltip-text">Settings</span>
            </div>
            
        </div>
    </div>
</header>