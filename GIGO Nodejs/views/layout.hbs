<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>

    <!-- Bootstrap (if needed) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Load 'style.css' for home and general pages -->
    <link rel="stylesheet" href="/stylesheets/style.css">

    <!-- Load Footer Styles -->
    <link rel="stylesheet" href="/stylesheets/footerstyle.css">

    {{!-- Load 'loginstyle.css' only on the login page --}}
    {{#if isLoginPage}}
    <link rel="stylesheet" href="/stylesheets/loginstyle.css">
    {{/if}}

    {{!-- Load 'headerstyle.css' only for header styles --}}
    {{#if isHeaderPage}}
    <link rel="stylesheet" href="/stylesheets/headerstyle.css">
    {{/if}}

    {{#if isSidebarPage}}
    <link rel="stylesheet" href="/stylesheets/sidebarstyle.css">
    {{/if}}

    {{#if isHistoryPage}}
    <link rel="stylesheet" href="/stylesheets/history_style.css">
    {{/if}}
</head>

<body>
    {{!-- Include the header based on the user role --}}
    {{#if isAdmin}}
    {{> admin_header}} <!-- Admin header -->
    {{else if isProvider}}
    {{> provider_header}} <!-- Provider header -->
    {{> provider_sidebar}} <!-- Provider sidebar -->
    {{else if isLoginPage}} <!-- Login header -->
    {{> login_header}}
    {{else}}
    {{> user_header}} <!-- User header -->
    {{/if}}

    {{!-- Content injected here --}}
    {{{body}}}

    {{> footer}}

    <!-- Global JavaScript file -->
    <script src="/javascripts/main.js"></script>

    {{!-- Load 'login.js' only on the login page --}}
    {{#if isLoginPage}}
    <script src="/javascripts/login.js"></script>
    {{/if}}
</body>

</html>